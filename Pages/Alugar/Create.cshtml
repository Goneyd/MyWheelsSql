@page
@model MyWheelsSql.Pages.Alugar.CreateModel


@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
        
<h1>Create</h1>
        
    <h4>Compra</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <div>
                <h4>Cliente</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Cliente.Cpf)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Cliente.Cpf)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Cliente.Nome)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Cliente.Nome)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Cliente.Endereco)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Cliente.Endereco)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Cliente.Email)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Cliente.Email)
                    </dd>
                </dl>
            </div>
            
            <table class="table">
                <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Bicicletas[0].Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bicicletas[0].Preco)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Bicicletas[0].Tamanho)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bicicletas[0].Tipo)
                    </th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Bicicletas) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Preco)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tamanho)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tipo)
                        </td>
                    </tr>
                }
                </tbody>
            </table>
            
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Aluguel.DataInicio" class="control-label"></label>
                    <input asp-for="Aluguel.DataInicio" class="form-control"/>
                    <span asp-validation-for="Aluguel.DataInicio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Aluguel.DataFim" class="control-label"></label>
                    <input asp-for="Aluguel.DataFim" class="form-control"/>
                    <span asp-validation-for="Aluguel.DataFim" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Aluguel.ValorTotal" class="control-label"></label>
                    <input asp-for="Aluguel.ValorTotal" class="form-control"/>
                    <span asp-validation-for="Aluguel.ValorTotal" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Aluguel.ClienteId" class="control-label"></label>
                    <input asp-for="Aluguel.ClienteId" class="form-control"/>
                    <span asp-validation-for="Aluguel.ClienteId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary"/>
                </div>
            </form>
        </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>
    
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
