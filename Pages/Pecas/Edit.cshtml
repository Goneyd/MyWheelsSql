@page
@model MyWheelsSql.Pages.Pecas.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Produto.ProdutoId" />
            <div class="form-group">
                
                <label asp-for="Produto.Nome" class="control-label"></label>
                <input asp-for="Produto.Nome" class="form-control" />
                <span asp-validation-for="Produto.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Produto.Preco" class="control-label"></label>
                <input asp-for="Produto.Preco" class="form-control" />
                <span asp-validation-for="Produto.Preco" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Produto.Disponivel" /> @Html.DisplayNameFor(model => model.Produto.Disponivel)
                </label>
            </div>
            <div class="form-group">
                
                <label asp-for="Produto.CompraId" class="control-label"></label>
                <select asp-for="Produto.CompraId" class="form-control" asp-items="ViewBag.CompraId"></select>
                <span asp-validation-for="Produto.CompraId" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Produto.AluguelId" class="control-label"></label>
                <select asp-for="Produto.AluguelId" class="form-control" asp-items="ViewBag.AluguelId"></select>
                <span asp-validation-for="Produto.AluguelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
