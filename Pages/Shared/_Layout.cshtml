<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyWheelsSql</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap.min (2).css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyWheelsSql.styles.css" asp-append-version="true" />
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-warning border-bottom box-shadow mb-3"
         style="background-color: hsl(30, 60%, 70%); padding: 1.5rem; font-size: 1.2rem;">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-area="" asp-page="/Index" style="font-size: 1.5rem;">MyWheelsSql</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1 d-flex justify-content-between">
                    <li class="nav-item flex-fill text-center">
                        <a class="btn btn-outline-dark nav-link fw-bold w-100" asp-area="" asp-page="/Index"
                           style="font-size: 1.2rem; border-radius: 15px;">Home</a>
                    </li>
                    <li class="nav-item flex-fill text-center">
                        <a class="btn btn-outline-dark nav-link fw-bold w-100" asp-area="" asp-page="/Privacy"
                           style="font-size: 1.2rem; border-radius: 15px;">Privacy</a>
                    </li>
                    <li class="nav-item flex-fill text-center">
                        <a class="btn btn-outline-dark nav-link fw-bold w-100" asp-area="" asp-page="/Clientes/Index"
                           style="font-size: 1.2rem; border-radius: 15px;">Clientes</a>
                    </li>
                    <li class="nav-item flex-fill text-center">
                        <a class="btn btn-outline-dark nav-link fw-bold w-100" asp-area="" asp-page="/Bicicletas/Index"
                           style="font-size: 1.2rem; border-radius: 15px;">Bicicletas</a>
                    </li>
                    <li class="nav-item flex-fill text-center">
                        <a class="btn btn-outline-dark nav-link fw-bold w-100" asp-area="" asp-page="/Pecas/Index"
                           style="font-size: 1.2rem; border-radius: 15px;">Peças</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MyWheelsSql - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
