@page
@model MyWheelsSql.Pages.Comprar.SelecaoDeProdutos

@{
    Layout = "Shared/_Layout";
}

<div class="container mt-5">
    <h1>Selecione os Produtos</h1>
    <form method="post">
        <div class="form-group">
            <label for="PecasSelecionadas">Peças Disponíveis:</label>
            <select asp-for="PecasSelecionadas" class="form-control" multiple>
                @foreach (var peca in Model.Pecas)
                {
                    <option value="@peca.Value">@peca.Text</option>
                }
            </select>
        </div>

        <div class="form-group mt-4">
            <label for="BicicletasSelecionadas">Bicicletas Disponíveis:</label>
            <select asp-for="BicicletasSelecionadas" class="form-control" multiple>
                @foreach (var bicicleta in Model.Bicicletas)
                {
                    <option value="@bicicleta.Value">@bicicleta.Text</option>
                }
            </select>
        </div>

        <input type="hidden" asp-for="Cpf" />
        
        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">Confirmar Seleção</button>
        </div>
    </form>
</div>